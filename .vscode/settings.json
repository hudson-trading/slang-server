{
  "python.testing.pytestArgs": [],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "testMate.cpp.test.workingDirectory": "${workspaceFolder}",
  // Prevents accidentally opening and editing build output files
  "files.readonlyInclude": {
    "build": true
  },
  "search.exclude": {
    "external/reflect-cpp": true,
    "external/slang/bindings/": true,
    // set this to false to include "out" folder in search results
    "clients/vscode/out": true,
    // set this to false to include "dist" folder in search results
    "clients/vscode/dist": true,
    "clients/vscode/node_modules/": true,
    "clients/vscode/package-lock.json": true,
    ".venv/": true,
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  // Disables ctest from popping up in the VSCode explorer. Use C++ TestMate instead.
  "cmake.ctest.testExplorerIntegrationEnabled": false,
}
